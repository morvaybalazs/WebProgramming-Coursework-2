@model CourseworkCauses.Models.NewCauseModel

<! ––create new cause page ––>

    <h1>New Cause @Model.CauseTypeName</h1>

    <div class="post">
        <div class="row">
            <form asp-action="AddCause" method="post" id="addCauseForm">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" rows="5" class="form-control" placeholder="Write your cause here...."></textarea>
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Submit Cause</button>
                <input asp-for="CauseTypeId" type="hidden" />
            </form>
        </div>
    </div>



